@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Удаление аккаунта";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>
            <strong>Удалённый аккаунт не может быть восстановлен.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
           
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Удалить</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
